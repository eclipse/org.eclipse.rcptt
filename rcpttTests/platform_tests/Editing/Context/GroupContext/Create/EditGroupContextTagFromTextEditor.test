------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/GroupContext" | double-click -nowait
with [get-editor GroupContext | get-editbox -after [get-label "Tags:"]] {
    set-text tagg
    key-type "M1+s"
}
get-view "Test Explorer" | get-tree | select "Q7Project/GroupContext" | get-menu "Open With/Text Editor" | click
with [get-editor "GroupContext.ctx" | get-text-viewer] {
    set-caret-pos 9 11
    key-type "NUMPAD_2" 2
    key-type "M1+s"
}
get-editor GroupContext | click -nowait
get-editor GroupContext | get-editbox -after [get-label "Tags:"] | get-property value | equals tagg2 | verify-true
with [get-editor GroupContext | get-editbox -after [get-label "Tags:"]] {
    set-text tagg23
    key-type "M1+s"
}
get-editor "GroupContext.ctx" | click -nowait
get-editor "GroupContext.ctx" | get-editbox | get-property value | contains tagg23 | verify-true
