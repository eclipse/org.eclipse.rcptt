------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/WorkspaceContext" | double-click -nowait
with [get-editor WorkspaceContext | get-editbox -after [get-label "Tags:"]] {
    set-text tagg
    key-type "M1+s"
}
get-view "Test Explorer" | get-tree | select "Q7Project/WorkspaceContext" | get-menu "Open With/Text Editor" | click
with [get-editor "WorkspaceContext.ctx" | get-text-viewer] {
    key-type "M1+f"
    with [get-window "Find/Replace"] {
        with [get-combo -after [get-label "Find:"]] {
            set-text tagg
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-combo -after [get-label "Replace with:"] | set-text tagg2
        get-button "Replace All" | click
        get-button Close | click
    }
    key-type "M1+s"
}
get-editor WorkspaceContext | click -nowait
get-editor WorkspaceContext | get-editbox -after [get-label "Tags:"] | get-property value | equals tagg2 | verify-true
get-editor "WorkspaceContext.ctx" | click -nowait
with [get-editor WorkspaceContext] {
    click -nowait
    with [get-editbox -after [get-label "Tags:"]] {
        set-text tag23
        key-type "M1+s"
    }
}
get-editor "WorkspaceContext.ctx" | click -nowait
get-editor "WorkspaceContext.ctx" | get-editbox | get-property value | contains tag23 | verify-true
