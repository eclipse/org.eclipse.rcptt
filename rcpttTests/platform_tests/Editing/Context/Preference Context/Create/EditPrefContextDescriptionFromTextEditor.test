------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/PreferenceContext" | double-click -nowait
with [get-editor PreferenceContext | get-section Description] {
    click -nowait
    with [get-editbox] {
        set-text qqq
        key-type "M1+s"
    }
}
get-view "Test Explorer" | get-tree | select "Q7Project/PreferenceContext" | get-menu "Open With/Text Editor" | click
with [get-editor "PreferenceContext.ctx" | get-text-viewer] {
    key-type "M1+f"
	with [get-window "Find/Replace"] {
	    with [get-combo -after [get-label "Find:"]] {
	        set-text qqq
	        key-type "TRAVERSE_TAB_NEXT"
	    }
	    get-combo -after [get-label "Replace with:"] | set-text qqq22
	    get-button "Replace All" | click
	    get-button Close | click
	}
    key-type "M1+s"
}
get-editor PreferenceContext | click -nowait
get-editor PreferenceContext | get-section Description | click -nowait
get-editor PreferenceContext | get-section Description | get-editbox | get-property value | equals qqq22 | verify-true
with [get-editor PreferenceContext | get-section Description | get-editbox] {
    set-text qqq2233
    key-type "M1+s"
}
get-editor "PreferenceContext.ctx" | click -nowait
get-editor "PreferenceContext.ctx" | get-editbox | get-property value | contains qqq2233 | verify-true
