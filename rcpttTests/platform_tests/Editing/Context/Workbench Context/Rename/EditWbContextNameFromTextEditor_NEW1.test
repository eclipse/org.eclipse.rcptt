------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Q7 Explorer" | get-tree] {
    select "Q7Project/WorkbenchContext" | double-click -nowait
    select "Q7Project/WorkbenchContext" | get-menu "Open With/Text Editor" | click
}
get-editor WorkbenchContext | click -nowait
with [get-editor "WorkbenchContext.ctx"] {
    click -nowait
    with [get-editbox] {
        set-text-offset 30 3
        key-type "NUMPAD_2" 2
        key-type "M1+s"
    }
}

get-editor WorkbenchContext2 | get-editbox -after [get-label "Name:"] | get-property value | equals WorkbenchContext2 
    | verify-true
with [get-editor WorkbenchContext2 | get-editbox -after [get-label "Name:"]] {
    set-text WorkbenchContext23
    key-type "M1+s"
}

get-editor "WorkbenchContext23.ctx" | get-editbox | get-property value | contains WorkbenchContext23 | verify-true
