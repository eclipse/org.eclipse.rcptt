------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Q7 Explorer" | get-tree | select "Q7Project/DebugContext" | double-click -nowait
with [get-editor DebugContext] {
    with [get-section Description] {
        click -nowait
        mouse-press 65 29 button1
        mouse-release 65 29 button1 524288
    }
    with [get-editbox -after [get-label "Tags:"]] {
        set-text qqq
        key-type "M1+s"
    }
}
get-view "Q7 Explorer" | get-tree | select "Q7Project/DebugContext" | get-menu "Open With/Text Editor" | click
with [get-editor "DebugContext.ctx" | get-editbox] {
    set-text-offset 9 13
    key-type "NUMPAD_2" 2
    key-type "M1+s"
}
get-editor DebugContext | click -nowait
get-editor DebugContext | get-editbox -after [get-label "Tags:"] | get-property value | equals qqq2 | verify-true
with [get-editor DebugContext | get-editbox -after [get-label "Tags:"]] {
    set-text qqq23
    key-type "M1+s"
}
get-editor "DebugContext.ctx" | click -nowait
get-editor "DebugContext.ctx" | get-editbox | get-property value | contains qqq23 | verify-true
