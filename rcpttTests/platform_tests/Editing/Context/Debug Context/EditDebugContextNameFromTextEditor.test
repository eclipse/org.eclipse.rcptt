------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Test Explorer" | get-tree] {
    select "Q7Project/DebugContext" | double-click -nowait
    select "Q7Project/DebugContext" | get-menu "Open With/Text Editor" | click
}
with [get-editor "DebugContext.ctx" | get-editbox] {
    set-text-offset 26 3
    key-type "NUMPAD_2" 2
    key-type "M1+s"
}
get-editor DebugContext2 | click -nowait
get-editor DebugContext2 | get-editbox -after [get-label "Name:"] | get-property value | equals DebugContext2 
    | verify-true
with [get-editor DebugContext2 | get-editbox -after [get-label "Name:"]] {
    set-text DebugContext23
    key-type "M1+s"
}
get-editor "DebugContext23.ctx" | get-editbox | get-property value | contains DebugContext23 | verify-true
