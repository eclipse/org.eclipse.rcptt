------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "RCP Testing Tool"
    with [get-section "Advanced options"] {
        click
        get-link "<a>Runner arg</a>" | click-link
    }
}
get-window Preferences | get-window "-testOptions arg for RCPTT Runner" 
    | get-label "All options are set to defaults, no need to specify -testOptions arg" | get-property caption 
    | equals "All options are set to defaults, no need to specify -testOptions arg" | verify-true
with [get-window Preferences] {
    get-window "-testOptions arg for RCPTT Runner" | get-button Close | click
    with [get-section "Advanced options"] {
        get-group "Core Features" | get-button "Kill AUT on connect error" | check
        get-group "Runtime Features" | get-button "Allow status dialogs" | check
    }
    get-button Apply | click
    get-section "Advanced options" | get-link "<a>Runner arg</a>" | click-link
}
get-window Preferences | get-window "-testOptions arg for RCPTT Runner" 
    | get-label "-testOptions runtimeStatusDialogAllowed=true;launchingKillAutOnConnectError=true" 
    | get-property caption | equals "-testOptions runtimeStatusDialogAllowed=true;launchingKillAutOnConnectError=true" 
    | verify-true
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
