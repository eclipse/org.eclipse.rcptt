------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/TestCase1" | double-click
with [get-editor TestCase1 | get-section Script | get-editbox] {
    type-text qqq
    key-type "M1+s"
}
get-view "Test Explorer" | get-tree | select "Q7Project/TestCase1" | get-menu "Open With/Text Editor" | click
with [get-editor "TestCase1.test" | get-text-viewer] {
   key-type "M1+f"
    with [get-window "Find/Replace"] {
        with [get-combo -after [get-label "Find:"]] {
            set-text qqq
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-combo -after [get-label "Replace with:"] | set-text qqq22
        get-button "Replace All" | click
        get-button Close | click
    }
    key-type "M1+s"
}
get-editor TestCase1 | click
get-editor TestCase1 | get-section Script | get-editbox | get-property value | equals qqq22 | verify-true
with [get-editor TestCase1 | get-section Script | get-text-viewer] {
    set-caret-pos 1 6
    type-text 33
    key-type "M1+s"
}
get-editor "TestCase1.test" | click
get-editor "TestCase1.test" | get-editbox | get-property value | contains qqq2233 | verify-true
