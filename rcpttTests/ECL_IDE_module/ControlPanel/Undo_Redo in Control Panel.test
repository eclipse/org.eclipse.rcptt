------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "TestQ7Prj/Test scenario" | double-click -nowait
with [get-editor "Test scenario"] {
    with [get-section Script | get-editbox] {
        type-text "wait "
        key-type "NUMPAD_2" 2
        key-type "NUMPAD_0" 0
        key-type "NUMPAD_0" 0
    }
    get-button Record | click
}
get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7 [Recording]" | get-editbox | get-property rawValue 
    | equals "wait 200" | verify-true
with [get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7 [Recording]"] {
    get-editbox | set-text-offset 8 0
    get-button Stop | click
}
with [get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox] {
    set-text-offset 8 0
    key-type CR
    key-type q
}
get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox | get-property rawValue 
    | equals "wait 200\\n"
    + "q" | verify-true
with [get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox] {
    set-text-offset 1 1
    key-type "M1+z"
    set-text-offset 8 0
}
get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox | get-property rawValue 
    | equals "wait 200" | verify-true
with [get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox] {
    set-text-offset 8 0
    key-type "M1+y"
}
get-window "Q7 Control Panel - Test scenario (TestQ7Prj) - selfQ7" | get-editbox | get-property rawValue 
    | equals "wait 200\\n"
    + "q" | verify-true
